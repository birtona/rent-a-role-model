<h1>Zusätzliche Angaben zu Dir, die in deinem Profil erscheinen sollen</h1>

<%= form_for [@user, @info], url: admin_user_user_information_path(@user) do |f| %>
  <div class="row selection">
      <div>
        <div>
          <%= f.label :why, "Warum möchtest du ein Role Model sein?" %>
          <%= f.text_area :why %>
        </div>
        <div>
          <%= f.label :past, "Auf welchen Schul-Events warst du bereits als Role Model?" %>
          <%= f.text_area :past %>
        </div>
      </div>
      <div>
        <div>
          <%= f.label :projects, "An welchen Projekten (Frauen in IT) warst oder bist du beteiligt?" %>
          <%= f.text_area :projects %>
        </div>
        <div>
          <%= f.label :places, "An welchen Orten stehst du als Role Model zur Verfügung?" %>
          <%= f.text_area :places %>
        </div>
        <div><%= f.submit 'Speichern', class:'btn submit' %></div>
      </div>
  </div>
<% end %>