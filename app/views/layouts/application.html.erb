<!DOCTYPE html>
<html>
<head>
  <title>Rent a Role Model</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'fav.ico' %>
</head>

<body>
    <div id="cover">
        <div class="bannerImg"></div>
        <div id="stage"></div>
    </div>

    <div id="wrapper">
      <div id="message">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
      </div>

      <div id="logo">Rent a Role Model</div>
      <div id="content">
        <%= yield %>
      </div>  
      <nav>
          <ul>
            <li><%= link_to "Home", root_url %></li>
            <li><%= link_to "Melde dich jetzt als Role Model an", home_role_model_path %></li>
            <li><%= link_to "Ãœber uns", about_path %></li>
            <% if current_user %>
              <li><%= link_to 'Ausloggen', logout_path %></li>
            <% else %>
              <li><%=  link_to "Mit XING einloggen", sign_up_path %></li>
            <% end %>
          </ul>
      </nav>
    </div>


  </body>
</html>
